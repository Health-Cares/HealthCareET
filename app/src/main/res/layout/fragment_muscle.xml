<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

>
<FrameLayout
        android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MuscleFragment">


    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="500dp"
                android:orientation="vertical">
            <TextView
                    android:text="Muscle Pain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <ImageView
                    android:layout_width="391dp"
                    android:layout_height="182dp" app:srcCompat="@drawable/muscleone"/>
            <TextView
                    android:text="Muscle pain originates in any of the muscles in the body. The medical term for muscle pain is myalgia. Muscle pain may arise due to injury or overexertion, infections of the soft tissues, or inflammatory conditions. ... Related symptoms that can occur with muscle pain are tenderness, swelling, redness, or fever."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="Home Remedies for Muscle Soreness and Pain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                    android:text="1. Cherry juice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <ImageView
                    android:layout_width="391dp"
                    android:layout_height="182dp" app:srcCompat="@drawable/cherry"/>
            <TextView
                    android:text="Tart cherry juice contains very high levels of anthocyanins, antioxidant compounds that help reduce muscle soreness and discomfort. In one study on how to relieve sore muscles, runners who drank two bottles of tart cherry juice for a week before a race and on race day experienced less post-race pain compared to a placebo group. Other research on marathon runners suggests that cherry juice’s anti-inflammatory properties speed recovery. Check out more old-time remedies we’ve forgotten but need to bring back."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="2. Watermelon juice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <ImageView
                    android:layout_width="391dp"
                    android:layout_height="182dp" app:srcCompat="@drawable/water"/>
            <TextView
                    android:text="If you need something sweeter, opt for a little watermelon juice. The fruit packs an amino acid called L-citrulline, which may support workout recovery. As a very small study on how to relieve sore muscles published in the Journal of Agricultural and Food Chemistry found, seven athletes who drank about 16 ounces of watermelon juice reduced muscle soreness a day after an intense exercise bout."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="3. Massage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <ImageView
                    android:layout_width="391dp"
                    android:layout_height="182dp" app:srcCompat="@drawable/massage"/>
            <TextView
                    android:text="Even if your muscles are sore, it’s not too late to find relief. A study in the Journal of Exercise Rehabilitation found that leg massage decreased pain intensity and helped restore participants’ normal gait (when you’re sore, you’ll walk funny). Massage not only feels good, but it bolsters circulation to tissues to reduce inflammation in a similar manner as OTC NSAIDs, researchers believe. It doesn’t mean you need to shell out for an expensive massage session, either; there are easy ways to learn self-massage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="4. Movement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <ImageView
                    android:layout_width="391dp"
                    android:layout_height="182dp" app:srcCompat="@drawable/movement"/>
            <TextView
                    android:text="It can be tempting to just sit around when experiencing soreness caused by an intense workout, but that’s not how to relieve sore muscles. Soothe the stiffness by simply getting up and moving around or doing some stretches. Research shows “active recovery” is
effective in helping to ease the tension and stiffness and stop the pain sooner. These are energizing stretches you can even do in your bed."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="5. Sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <ImageView
                    android:layout_width="391dp"
                    android:layout_height="182dp" app:srcCompat="@drawable/sleep"/>
            <TextView
                    android:text="Muscle soreness and pain are caused by tears in your muscles, and those tears need time to heal. Your body produces higher levels or growth hormone when you sleep, helping to rebuild your muscles. And researchers think that lack of sleep hinders muscle repair and recovery."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="6. Cold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <ImageView
                    android:layout_width="391dp"
                    android:layout_height="182dp" app:srcCompat="@drawable/cold"/>
            <TextView
                    android:text="Called cryotherapy, cold applications probably don’t cool the muscle—but they may calm nerves that sense pain. A review of 36 studies from Belgian researchers found that ice packs and baths relieve DOMS. For muscle pain or swelling try putting an ice pack directly on the affected area for 13 minutes, according to the study."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="7. Anti-inflammatory medication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <ImageView
                    android:layout_width="391dp"
                    android:layout_height="182dp" app:srcCompat="@drawable/anti"/>
            <TextView
                    android:text="When muscle soreness gets really bad, some people pop an over-the-counter pain killer, like ibuprofen or aspirin. According to a review by Georgia State University researchers, these meds can be taken to ease soreness after exercise, particularly when it comes to lower-body workouts. Just don’t overdo it—there are real dangers to taking high doses of painkillers."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"/>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>
</layout>